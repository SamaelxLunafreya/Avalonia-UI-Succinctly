<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
        x:Class="Ch9_Graphics_Animations_Brushes.GraphicsWindow"
        Title="GraphicsWindow">
	<StackPanel>
		<Rectangle Stroke="Green" StrokeThickness="4" StrokeDashArray="1,1"
         StrokeDashOffset="6" Width="250" Height="100"
         Margin="0,50,0,0">
			<Rectangle.Fill>
				<LinearGradientBrush>
					<GradientStop Color="LightBlue" Offset="0"/>
					<GradientStop Color="Blue" Offset="0.5"/>
					<GradientStop Color="Violet" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>

		<Ellipse Fill="Violet" Stroke="Green" StrokeThickness="3"
         Width="250" Height="100" Margin="0,50,0,0"/>

		<Line StartPoint="10,0" EndPoint="230,0" StrokeLineCap="Round" Stroke="Violet"
	     StrokeThickness="12" Margin="0,50,0,0" />

		<Polygon Points="50,20 80,60 20,60" Fill="Violet" Stroke="Green"
		 StrokeThickness="4" StrokeDashArray="1,1" StrokeDashOffset="6"/>

		<Polyline Margin="0,50,0,0" Points="0 48, 0 144, 96 150, 100 0, 192 0, 192 96, 50 96, 48 192, 150 200 144 48"
         Fill="Violet" Stroke="DarkGreen" StrokeThickness="3"/>
	</StackPanel>
</Window>
