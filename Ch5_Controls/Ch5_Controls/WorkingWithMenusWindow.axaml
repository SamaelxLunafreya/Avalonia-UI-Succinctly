<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ch5_Controls.WorkingWithMenusWindow"
        Title="WorkingWithMenusWindow">
	<DockPanel VerticalAlignment="Top">
		<Menu DockPanel.Dock="Top" Background="LightGray">
			<MenuItem Header="_File">
				<MenuItem Header="_Open..." Name="OpenButton" Click="OpenButton_Click">
					<MenuItem.Icon>
						<Image Source="avares://Ch5_Controls/Assets/OpenFile.png"/>
					</MenuItem.Icon>
				</MenuItem>
				<Separator/>
				<MenuItem Header="_Exit"/>
			</MenuItem>
			<MenuItem Header="_Edit">
				<MenuItem Header="Copy"/>
				<MenuItem Header="Paste"/>
			</MenuItem>
		</Menu>
	</DockPanel>
</Window>
